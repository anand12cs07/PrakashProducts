<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#70ffffff" />
            <gradient android:angle="-90" android:startColor="#a8f4e7" android:endColor="#ffffff"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#70ffffff" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#70ffffff" />
                </shape>
            </item>
            <item
                android:bottom="-4dp"
                android:left="-4dp"
                android:top="-4dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:width="4dp"
                        android:color="#8be2f5"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>